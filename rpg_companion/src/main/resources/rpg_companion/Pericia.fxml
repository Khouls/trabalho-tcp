<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane prefHeight="66.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rpg_companion.PericiaController">
   <children>
      <HBox alignment="CENTER" prefHeight="66.0" prefWidth="200.0" spacing="10.0" styleClass="background">
         <children>
            <Text fill="#f0f0f0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text-foreground" text="Pericia">
               <font>
                  <Font size="14.0" />
               </font>
            </Text>
            <Spinner fx:id="periciaSpinner" editable="true" onInputMethodTextChanged="#atualizarPericia" prefHeight="25.0" prefWidth="68.0" />
            <Button mnemonicParsing="false" prefHeight="34.0" prefWidth="32.0">
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="24.0" onMouseClicked="#rolar" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/d20.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
   </children>
</Pane>
