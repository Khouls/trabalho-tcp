<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="888.0" prefWidth="1810.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rpg_companion.PrimaryController">
    <top>
        <VBox spacing="20.0" BorderPane.alignment="TOP_LEFT">
            <children>
                <Label text="Página Inicial" />
                <HBox spacing="10.0">
                     <Button fx:id="primaryButton" onAction="#switchToSecondary" text="VISÃO GERAL" />
                     <HBox fx:id="personagensBox" spacing="10.0" />
                     <Button onAction="#adicionarPersonagem" text="+" />
               </HBox>
                     <VBox fx:id="tabContent" />
                     
               <TextField fx:id="nomePersonagemField" promptText="Nome do Personagem" />
               <TextField fx:id="classePersonagemField" promptText="Classe do Personagem" />
   
            </children>
            <padding>
                <Insets left="20.0" top="20.0" />
            </padding>
        </VBox>
    </top>
   <center>
      <HBox fx:id="personagemArea" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
